{
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": {
      "cwd": "../",
      "script": "pnpm run build"
    },
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Nexus Launcher",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "clipboard": {
        "writeText": true
      },
      "fs": {
        "all": false,
        "readDir": true,
        "exists": true,
        "scope": ["**"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.eatham532.nexuslauncher",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/Eatham532/035c65c6eedf455fd69352fa033a57c9/raw/d008022b95b39f5d15afdfc67c163828099ed701/nexuslauncher-update.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYwM0MwRkZEREM0QzlCNEYKUldSUG0wemMvUTg4WUZhdmd2VkJpekNSTk9BZElibTNkSENTZW5ycWFjS3lEbFRXVTRhREhzNm0K",
      "windows": {
        "installMode": "passive"
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "visible": false,
        "fullscreen": false,
        "resizable": true,
        "title": "Nexus Launcher",
        "width": 1200,
        "height": 800
      }
    ],
    "macOSPrivateApi": true
  }
}
